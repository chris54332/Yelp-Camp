<%- include ('../partials/header') %>

<h1 style="text-align: center;">Add a new comment to <%= sandwich.name%></h1>
<div style="width: 30%; margin:25px auto;">
    <form action="/sandwiches/<%= sandwich._id%>/comments" method="POST" id="new-sandwich">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="text" name="comment[text]" id="form-el">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="text" name="comment[author]" id="form-el">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/sandwiches/<%= sandwich._id%>">
    <  Go back!</a>
</div>

