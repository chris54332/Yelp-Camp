<%- include ('../partials/header') %>

<h1 style="text-align: center;">Create a new campground</h1>
<div style="width: 30%; margin:25px auto;">
    <form action="/campgrounds" method="POST" id="new-campground">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="name" name="newCampground[name]" id="form-el">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="image url" name="newCampground[image]" id="form-el">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="description" name="newCampground[description]" id="form-el">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/campgrounds">< Go back</a>
</div>

