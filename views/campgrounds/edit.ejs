<%- include ('../partials/header') %>

<h1 style="text-align: center;">Edit <%= campground.name%></h1>
<div style="width: 30%; margin:25px auto;">
    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" id="edit-campground">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" value="<%= campground.name%>" name="editSand[name]" id="form-el">
        </div>
        <div class="form-group">
            <label>Image url</label>
            <input class="form-control" type="text" value="<%= campground.image%>" name="editSand[image]" id="form-el">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" type="text" value="<%= campground.description%>" name="editSand[description]" id="form-el">
        </div>
        <div class="form-group">
            
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/campgrounds/<%= campground._id%>">
    < Go back</a>
</div>

<%- include ('../partials/footer') %>        