<%- include ('../partials/header') %>
<hr>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Danney's Sandwiches</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6">
                    <div class="thumbnail">
                        <img class="img-responsive" src="<%=sandwich.image%>" alt="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="caption-full">
                        <h4 class="text-right">6Â£</h4>
                        <h4><%=sandwich.name%></h1>
                        <p><%=sandwich.description%></p>
                    </div>
                    <div>
                        <button class="btn btn-primary">Buy</button>
                    </div>
                </div>
            </div>
            <hr>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-danger" href="/sandwiches/<%= sandwich._id %>?_method=DELETE">Delete</a>
                    <a class="btn btn-info" href="/sandwiches/<%= sandwich._id %>/edit">Edit</a>
                    <a class="btn btn-success" href="/sandwiches/<%= sandwich._id %>/comments/new">Add A Comment</a>
                     <!-- <form action= method="GET">
                        <button class="btn btn-primary">Add a comment</button>
                    </form> -->
                </div>
                <hr>
                <% sandwich.comments.forEach((comment)=>{ %>
                    <div class="row">
                            <div class="col-md-9">
                                <strong><%=comment.author.username %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p> <%=comment.text%></p>
                            </div>
                    </div>
                <%})%>
            </div>
        <a href="/sandwiches"> <  Go back!</a>
        </div>
    </div>
</div>

