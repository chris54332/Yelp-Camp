<%- include ('../partials/header') %>

<h1 style="text-align: center;">Edit <%= sandwich.name%></h1>
<div style="width: 30%; margin:25px auto;">
    <form action="/sandwiches/<%= sandwich._id%>?_method=PUT" method="POST" id="edit-sandwich">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" value="<%= sandwich.name%>" name="editSand[name]" id="form-el">
        </div>
        <div class="form-group">
            <label>Image url</label>
            <input class="form-control" type="text" value="<%= sandwich.image%>" name="editSand[image]" id="form-el">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" type="text" value="<%= sandwich.description%>" name="editSand[description]" id="form-el">
        </div>
        <div class="form-group">
            
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/sandwiches/<%= sandwich._id%>">
    <  Go back!</a>
</div>

